{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "../../server",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es6"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}